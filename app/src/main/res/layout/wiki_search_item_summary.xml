<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wiki_search_item_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/search_item_title"
            android:textSize="@dimen/title_regular"
            android:textColor="@color/gray_dark"/>
        <TextView
            android:id="@+id/wiki_search_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/title_regular"
            android:text="Satterfield-Gottlieb"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/wiki_item_last_edited_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_regular"
            android:text="@string/search_item_last_edited_date"
            android:textColor="@color/gray_dark"/>
        <TextView
            android:id="@+id/wiki_item_last_edited_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_regular"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray_blue_light"
            android:text="Sleek Plastic Shirt"/>
    </LinearLayout>


</LinearLayout>